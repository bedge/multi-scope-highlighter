{
  "publisher": "bruce-edge",
  "name": "multi-scope-highlighter",
  "repository": {
    "type": "git",
    "url": "https://github.com/bedge/multi-scope-highlighter"
  },
  "displayName": "multi-scope-highlighter",
  "description": "Highlight multiple selections across multiple files in VS Code.",
  "icon": "images/rainbow.png",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Multi-Scope Highlighter",
      "properties": {
        "multiScopeHighlighter.fillOpacity": {
          "type": "number",
          "default": 0.35,
          "minimum": 0.1,
          "maximum": 1.0,
          "description": "Opacity of the background highlight (0.1 - 1.0)."
        },
        "multiScopeHighlighter.textContrast": {
          "type": "string",
          "enum": [
            "inherit",
            "force-contrast"
          ],
          "default": "inherit",
          "description": "Text color style. 'inherit' keeps syntax highlighting; 'force-contrast' sets text to Black/White for maximum readability."
        },
        "multiScopeHighlighter.maxLinesForWholeFile": {
          "type": "number",
          "default": 10000,
          "description": "Performance: If a file has more lines than this, highlights will only appear in the visible area (viewport) to prevent lag. Set to 0 to always scan the whole file."
        },
        "multiScopeHighlighter.excludeNoiseWords": {
          "type": "string",
          "default": "- = : , ; . ! ? | & + * / \\ < > [ ] ( ) { } ' \" ` ~ @ # $ % ^ _",
          "description": "Space-separated list of words/characters to exclude from highlighting when using block selection. Useful for filtering out noise like punctuation."
        },
        "multiScopeHighlighter.debugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable detailed debug logging for profile operations. Logs appear in the Output panel under 'Extension Host'."
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "multiScopeHighlighter.toggleHighlight",
          "group": "navigation",
          "when": "editorHasSelection"
        },
        {
          "command": "multiScopeHighlighter.manageHighlights",
          "group": "multiScopeHighlighter@0",
          "when": "!editorHasSelection"
        },
        {
          "command": "multiScopeHighlighter.removeHighlightAtCursor",
          "group": "multiScopeHighlighter@1",
          "when": "editorTextFocus && multiScopeHighlighter.hasHighlightAtCursor"
        },
        {
          "command": "multiScopeHighlighter.editHighlightAtCursor",
          "group": "multiScopeHighlighter@2",
          "when": "editorTextFocus && multiScopeHighlighter.hasHighlightAtCursor"
        }
      ]
    },
    "commands": [
      {
        "command": "multiScopeHighlighter.showMenu",
        "title": "Highlight: Open Menu"
      },
      {
        "command": "multiScopeHighlighter.showProfileMenu",
        "title": "Highlight: Open Profile Menu"
      },
      {
        "command": "multiScopeHighlighter.toggleHighlight",
        "title": "Highlight: Toggle Selection"
      },
      {
        "command": "multiScopeHighlighter.highlightWords",
        "title": "Highlight: Add Word(s) at Cursor or from Selection"
      },
      {
        "command": "multiScopeHighlighter.clearAll",
        "title": "Highlight: Clear All"
      },
      {
        "command": "multiScopeHighlighter.undo",
        "title": "Highlight: Undo Last Change"
      },
      {
        "command": "multiScopeHighlighter.redo",
        "title": "Highlight: Redo Last Change"
      },
      {
        "command": "multiScopeHighlighter.toggleScope",
        "title": "Highlight: Toggle Scope (Single/All Open)"
      },
      {
        "command": "multiScopeHighlighter.saveProfile",
        "title": "Highlight: Save Profile"
      },
      {
        "command": "multiScopeHighlighter.saveProfileAs",
        "title": "Highlight: Save Profile As..."
      },
      {
        "command": "multiScopeHighlighter.loadProfile",
        "title": "Highlight: Load Profile"
      },
      {
        "command": "multiScopeHighlighter.deleteProfile",
        "title": "Highlight: Delete Profile"
      },
      {
        "command": "multiScopeHighlighter.switchProfile",
        "title": "Highlight: Switch Profile"
      },
      {
        "command": "multiScopeHighlighter.newProfile",
        "title": "Highlight: New Profile"
      },
      {
        "command": "multiScopeHighlighter.mergeProfile",
        "title": "Highlight: Merge Profile"
      },
      {
        "command": "multiScopeHighlighter.duplicateProfile",
        "title": "Highlight: Duplicate Profile"
      },
      {
        "command": "multiScopeHighlighter.loadTemplate",
        "title": "Highlight: Load Template"
      },
      {
        "command": "multiScopeHighlighter.enableProfile",
        "title": "Highlight: Enable Profile"
      },
      {
        "command": "multiScopeHighlighter.disableProfile",
        "title": "Highlight: Disable Profile"
      },
      {
        "command": "multiScopeHighlighter.manageHighlights",
        "title": "Highlight: Manage Current Highlights"
      },
      {
        "command": "multiScopeHighlighter.toggleStyle",
        "title": "Highlight: Toggle Style (Box / Fill / Hybrid)"
      },
      {
        "command": "multiScopeHighlighter.setOpacity",
        "title": "Highlight: Set Opacity"
      },
      {
        "command": "multiScopeHighlighter.toggleContrast",
        "title": "Highlight: Toggle Text Contrast"
      },
      {
        "command": "multiScopeHighlighter.toggleDisableAll",
        "title": "Highlight: Disable/Enable All (Toggle Visibility)"
      },
      {
        "command": "multiScopeHighlighter.removeHighlightAtCursor",
        "title": "Highlight: Remove at Cursor"
      },
      {
        "command": "multiScopeHighlighter.editHighlightAtCursor",
        "title": "Highlight: Edit at Cursor"
      },
      {
        "command": "multiScopeHighlighter.showKeybindings",
        "title": "Highlight: Show Keyboard Shortcuts"
      }
    ],
    "keybindings": [
      {
        "command": "multiScopeHighlighter.toggleHighlight",
        "key": "alt+q",
        "mac": "option+q",
        "when": "editorTextFocus"
      },
      {
        "command": "multiScopeHighlighter.highlightWords",
        "key": "shift+alt+q",
        "mac": "shift+option+q",
        "when": "editorTextFocus"
      },
      {
        "command": "multiScopeHighlighter.showProfileMenu",
        "key": "ctrl+alt+q",
        "mac": "cmd+alt+q"
      },
      {
        "command": "multiScopeHighlighter.undo",
        "key": "ctrl+alt+z",
        "mac": "cmd+option+z",
        "when": "editorTextFocus"
      },
      {
        "command": "multiScopeHighlighter.redo",
        "key": "ctrl+alt+y",
        "mac": "cmd+option+y",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^9.39.1",
    "glob": "^8.1.0",
    "mocha": "^10.8.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}